<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item3.Fragment3_2"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView android:layout_width="0dp" android:text="车型" android:layout_weight="2" android:background="#fff" android:layout_margin="2dp" android:padding="10dp" android:textSize="20dp" android:textColor="#000" android:textStyle="bold" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:text="交付时间" android:layout_weight="2" android:background="#fff" android:layout_margin="2dp" android:padding="10dp" android:textSize="20dp" android:textColor="#000" android:textStyle="bold" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:text="数量" android:layout_weight="2" android:background="#fff" android:layout_margin="2dp" android:padding="10dp" android:textSize="20dp" android:textColor="#000" android:textStyle="bold" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:text="发动机排量" android:layout_weight="2" android:background="#fff" android:layout_margin="2dp" android:padding="10dp" android:textSize="20dp" android:textColor="#000" android:textStyle="bold" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:text="变速箱" android:layout_weight="2" android:background="#fff" android:layout_margin="2dp" android:padding="10dp" android:textSize="20dp" android:textColor="#000" android:textStyle="bold" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:text="轮胎" android:layout_weight="2" android:background="#fff" android:layout_margin="2dp" android:padding="10dp" android:textSize="20dp" android:textColor="#000" android:textStyle="bold" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:text="中控" android:layout_weight="2" android:background="#fff" android:layout_margin="2dp" android:padding="10dp" android:textSize="20dp" android:textColor="#000" android:textStyle="bold" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:text="刹车" android:layout_weight="3" android:background="#fff" android:layout_margin="2dp" android:padding="10dp" android:textSize="20dp" android:textColor="#000" android:textStyle="bold" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:text="悬挂" android:layout_weight="3" android:background="#fff" android:layout_margin="2dp" android:padding="10dp" android:textSize="20dp" android:textColor="#000" android:textStyle="bold" android:gravity="center"/>
        </TableRow>
    </TableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

</LinearLayout>